<% if not alert.nil? %>
    <div class="alert alert-warning alert-dismissible" role="alert" style="margin-bottom: 0px;">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">X</span></button>
      <strong>警告!</strong> <%= alert %>
    </div>

<% end %>
<% if not notice.nil? %>
    <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom: 0px;">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">X</span></button>
      <strong>消息!</strong> <%= notice %>
    </div>
<% end %>
