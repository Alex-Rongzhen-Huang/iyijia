<h1>Listing show_houses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Area</th>
    <th>House type</th>
    <th>Brief</th>
    <th>Overview</th>
    <th>Style</th>
    <th>Price</th>
    <th>Need to know</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @show_houses.each do |show_house| %>
  <tr>
    <td><%= show_house.title %></td>
    <td><%= show_house.area %></td>
    <td><%= show_house.house_type %></td>
    <td><%= show_house.brief %></td>
    <td><%= show_house.overview %></td>
    <td><%= show_house.style %></td>
    <td><%= show_house.price %></td>
    <td><%= show_house.need_to_know %></td>
    <td><%= link_to 'Show', show_house %></td>
    <td><%= link_to 'Edit', edit_show_house_path(show_house) %></td>
    <td><%= link_to 'Destroy', show_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

