            <a data-price="100-1000">100万以上</a><br>
          </p>
          <script type="text/javascript">
            $(document).ready(function(){
                $('.search-filter p a').on('click',function(){$(this).siblings().removeClass('active');$(this).toggleClass('active')});
                $('.search-filter p.search-style a').on('click',function(){$('#show_houses_search #style').val($(this).data('style')); $('#show_houses_search').submit();});
                $('.search-filter p.search-usage a').on('click',function(){$('#show_houses_search #usage').val($(this).data('usage')); $('#show_houses_search').submit();});
                $('.search-filter p.search-area a').on('click',function(){$('#show_houses_search #area').val($(this).data('area')); $('#show_houses_search').submit();});
                $('.search-filter p.search-price a').on('click',function(){$('#show_houses_search #price').val($(this).data('price')); $('#show_houses_search').submit();});

                $('.search-filter p.search-style a').filter(function(){return $(this).data('style')==$('#show_houses_search #style').val();}).addClass('active');
                $('.search-filter p.search-usage a').filter(function(){return $(this).data('usage')==$('#show_houses_search #usage').val();}).addClass('active');
                $('.search-filter p.search-area a').filter(function(){return $(this).data('area')==$('#show_houses_search #area').val();}).addClass('active');
                $('.search-filter p.search-price a').filter(function(){return $(this).data('price')==$('#show_houses_search #price').val();}).addClass('active');
            });
          </script>
          <%= form_tag show_houses_path, :method => 'get', :id => "show_houses_search", :style=>'display:none;' do %>
              <p>
                <%= submit_tag "Search", :name => nil %>
                <%= params[:style] %>,<%= params[:usage] %>,<%= params[:area] %>,<%= params[:price] %>,
              </p>
              <div id="products">
                <%= hidden_field_tag :style, params[:style] %>
                <%= hidden_field_tag :usage, params[:usage] %>
                <%= hidden_field_tag :area, params[:area] %>
                <%= hidden_field_tag :price, params[:price] %>
              </div>
          <% end %>

