<p id="notice"><%= notice %></p>

<div class="row col-md-12" style="padding-top: 40px">
  <% @decorate_schemes.each do |decorate_scheme| %>
    <h3 align="center"><%= decorate_scheme.name %></h3>
    <div class="row">
      <% decorate_scheme.decorate_scheme_items.each do |x| %>
        <div class="col-xs-6 col-md-3" align="center">
          <a href="<%= x.path %>"  download><img src="<%= x.path %>" class="image_keep_ratio_for_big_image img-rounded" ></a>
          <p style="text-align: center"><%= x.description %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div align="center">
  <a class="btn btn-primary btn-lg" href="<%= user_orders_path %>">返回</a>
</div>
