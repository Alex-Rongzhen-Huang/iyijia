
<%= form_for(resource, as: resource_name, class: 'form-horizontal', url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
              <h2 style="text-align: center">修改密码<!--<%= resource_name.to_s.humanize %>--></h2>
    
  <br>
  <br>    
                
  <div class="form-group">
    <label class="col-sm-4 control-label" for="inputEmail">邮箱</label>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, class: "form-control", readonly:"readonly"%>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="form-group">
    <label class="col-sm-4 control-label" for="inputPassword">新密码</label>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="inputPassword">确认新密码</label>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="inputPassword">原始密码</label>
    <div class="col-sm-8">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" class="btn btn btn-primary">修改密码</button>
    </div>
  </div>

<% end %>

  <div style="text-align: right">
    <%= link_to "返回", :back %>
  </div>

