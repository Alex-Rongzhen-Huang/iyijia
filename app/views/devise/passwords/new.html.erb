<%= form_for(resource, as: resource_name, class: 'form-horizontal', url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <h2 style="text-align: center">忘记密码</h2>
  <br>
  <br>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">邮箱</label>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-control" %>
      </div>
  </div>
  <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn btn-primary">发送密码重置链接</button>
        </div>
      </div>
<% end %>

<%= render "devise/shared/links" %>